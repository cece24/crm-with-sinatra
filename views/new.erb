<h1>Create a New Contact</h1>

<form action="/contacts" method="post">
  <div class="contact-field">
    <label for="first-name">
      <span>First name:</span>
      <input id="first-name" type="text" name="first_name" value="">
    </label>
  </div>

  <div class="contact-field">
    <label for="last-name">
      <span>Last name:</span>
      <input id="last-name" type="text" name="last_name" value="">
    </label>
  </div>

  <div class="contact-field">
    <label for="email">
      <span>Email:</span>
      <input id="email" type="text" name="email" value="">
    </label>
  </div>

  <div class="contact-field">
    <label for="note">
      <span>Note:</span>
      <input id="note" type="text" name="note" value="">
    </label>
  </div>

  <input type="submit" value="New Contact">
</form>
